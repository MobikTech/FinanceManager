@using FinanceManager.BLL.DTO
@model IEnumerable<AccountDTO>

@{
    ViewData["Title"] = "Available accounts";
}

<!DOCTYPE html>

<html>
<body>
<div>
    <p>@Html.ActionLink("Make transaction", "Make", "Transaction")</p>
    <p>@Html.ActionLink("Add new account", "Create")</p>
    <h3>Accounts</h3>
    <table>
        <tr>
            <td>
                <p>Number</p>
            </td>
            <td>
                <p>Count</p>
            </td>
            <td></td>
        </tr>
        @foreach (AccountDTO account in Model)
        {
            <tr>
                <td>
                    <p>@account.Number</p>
                </td>
                <td>
                    <p>@account.Count</p>
                </td>
                <td>
                    <p>
                        @Html.ActionLink("Remove", "Remove", new {id = account.Id}) |
                        @Html.ActionLink("Details", "Details", new {id = account.Id})
                    </p>
                </td>
            </tr>
        }
    </table>
</div>
</body>
</html>